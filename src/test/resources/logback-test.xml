<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="false">
    <property name="app.name" value="OverseerApi"/>
    <property name="log.pattern" value="%d{yyyy-MM-dd'T'HH:mm:ss.SSS} ${LOG_LEVEL_PATTERN:-%5p} [${app.name}][%X{endpointPath}][%X{userId}] %m%n"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>${log.pattern}</pattern>
        </encoder>
    </appender>

    <logger name="org.springframework" level="INFO"/>
    <logger name="com.bnfd.common" level="INFO"/>
    <logger name="com.bnfd.overseer" level="DEBUG"/>
    <logger name="com.bnfd.overseer.service" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
